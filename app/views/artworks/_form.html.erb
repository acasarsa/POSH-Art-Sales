<% if flash[:errors] %>
  <% flash[:errors].each do |error|%>
    ERROR: <%= error %><br>
    <% end %>
<% end %>
<br>

<%= form_for @artwork do |f| %>

<%= f.label :title %>
<%= f.text_field :title %><br>
<br>
<%= f.label :img_url %>
<%= f.text_field :img_url %><br>
<br>
<%= f.label :price %>
<%= f.number_field :price %><br>
<br>
<%= f.label :for_sale %>
<%= f.check_box :for_sale%><br><br>

<%= f.label :artist %>
<%= f.collection_select :artist_id, Artist.all, :id, :name%><br>
<br>

<%= f.label :user_id %>
<%= f.collection_select :user_id, User.all, :id, :name, prompt: true%><br>
<br>

<%= f.label :object_type_id %>
<%= f.collection_select :object_type_id, ObjectType.all, :id, :name, prompt: true%><br>



<%#  change user to sessions %>
<%= f.submit %>
<% end %>

